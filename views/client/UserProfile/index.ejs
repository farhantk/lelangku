    <div class="container">
      <div class="row">
        <div class="col-12">
          <h2 style="font-family: 'Inter', sans-serif; font-weight:700">Ubah Profil Saya</h2>
        </div>

        <div class="row">
          <div class="col-md-4 text-center">
            <div class="card-propict">
              <div class="circle-icon position position-relative mx-auto">
                <img src="images/FotoProfil.png" alt="" class="position-absolute top-50 start-50 translate-middle">
              </div>
              <button type="button" class="btn btn-outline-primary">Pilih Foto</button>

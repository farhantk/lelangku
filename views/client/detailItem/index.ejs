<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>LelangKu - Your Best Auction Place</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="stylesheets/style.css" />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <%- include ../../partials/client/navbar.ejs %>

    <section class="container sproduct my-5 pt-5">
      <div class="row mt-5">
        <div class="col-lg-5 col-md-12 col-12">
          <img
            class="img-fluid w-100 pb-2"
            src="<%= item.image %>"
            id="MainImg"
            alt=""
          />
          <div class="small-img-group">
            <div class="small-img-col">
              <img
                src="assets/images/shoe-1.jpg"
                width="100%"
                class="small-img"
                alt=""
              />
            </div>
            <div class="small-img-col">
              <img
                src="assets/images/shoe-2.jpg"
                width="100%"
                class="small-img"
                alt=""
              />
            </div>
            <div class="small-img-col">
              <img
                src="assets/images/shoe-3.jpg"
                width="100%"
                class="small-img"
                alt=""
              />
            </div>
            <div class="small-img-col">
              <img
                src="assets/images/shoe-4.jpg"
                width="100%"
                class="small-img"
                alt=""
              />
            </div>
          </div>
        </div>
        <div class="col-lg-6 col-md-12 col-12">
          <h3>
            <%= itemName %> 
          </h3>
          <hr />
          <div class="time-and-bid">
            <i class="bx bx-time-five"></i>
            <p class="font-weight-bold">Sisa waktu :</p>
            <p>7j 13m</p>
            <span>|</span>
            <p>Banyak bid :</p>
            <p><%= item.bidCount %> </p>
          </div>
          <hr />
          <h5>Harga Terkini</h5>
          <h3 class="detail-item-harga">Rp. <%= price %> </h3>
          <div class="box-button">
            <form action="/<%= item._id %>?_method=PUT" method="POST">
              <button type="submit" class="btn btn-primary btn-lg button-bid">
                Bid | + Rp. 50.000
              </button>
            </form>
          </div>

          <div id="popup1" class="overlay">
            <div class="popup">
              <h2>Berhasil !</h2>
              <a class="close" href="#">&times;</a>
              <div class="content">Sukses menambahkan bid !</div>
            </div>
          </div>

          <hr />
          <h5>Deskripsi Produk</h5>
          <p>
            <%= desc %> 
          </p>
          <hr />
          <div class="d-flex flex-row align-items-center profile-section">
            <a href=""
              ><img
                src="assets/images/profile icon.png"
                class="rounded-circle store-image"
            /></a>
            <div class="d-flex flex-column ml-1 comment-profile">
              <span class="username"><%= item.seller.username %></span>
              <div class="seller-profile">
                <i class="bx bx-map"></i>
                <span class="followers"><%= item.seller.city %></span>
                <span> | </span>
                <i class="bx bxs-star"></i>
                <span>4.9 / 5.0</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <hr style="width: 90%; margin-left: auto; margin-right: auto" />

    <div class="divider">
      <h4 class="fw-bold">Barang Lainnya</h4>
    </div>

    <div
      class="container d-flex justify-content-start align-items-start flex-wrap"
    >
      <div class="row">
        <% for(var i=0; i<item_2.length;i++){ %>
          <div class="card">
            <span class="percent"><%= item_2[i].condition %> </span>
            <div class="card-image">
              <a class="gambar-hover" href="/<%= item_2[i]._id %>"
              ><img
              src="<%= item_2[i].image %>"
              width="500"
              style="border-radius: 10px"
              />
              <div class="overlay-card-product">
                <div class="text">View detail</div>
              </div>
            </a>
          </div>
          <div class="card-inner">
            <h5 class="mb-0 fw-bold"><%= item_2[i].name %> </h5>
            <div class="price">
              <span>Rp. <%= item_2[i].price %></span>
            </div>
            <span>Kab.Bandung</span>
            
            <div class="detail-item mt-3">
              <span class="">Berakhir pada</span>
            </div>
            <span class="fw-bold">15 Desember 2022</span>
            <div class="detail-item-waktu">
              <span class="fw-bold">05:00</span>
            </div>
          </div>
        </div>
      <% } %>
      </div>
    </div>

    <%- include ../../partials/client/footer.ejs %>

    <script src="javascripts/js.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
